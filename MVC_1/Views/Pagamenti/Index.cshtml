@model IEnumerable<MVC_1.Models.Pagamenti>

@{
    ViewBag.Title = "Index";
}
<div class="container colCont p-3 rounded-5">
    <h2>Index</h2>

    <p>
        @Html.ActionLink("Crea nuovo pagamento", "Create", null, new { @class = "btn btn-primary" })
    </p>
    <table class="table table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DipendenteId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PeriodoPagamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ammontare)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stipendio)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DipendenteId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PeriodoPagamento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ammontare)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stipendio)
                </td>
               
            </tr>
        }

    </table>
</div>
